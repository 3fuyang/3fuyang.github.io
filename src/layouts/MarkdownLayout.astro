---
import '@fontsource-variable/geist-mono'
import BaseLayout from './BaseLayout.astro'
import './MarkdownLayout.css'

interface Props {
  title: string
  keywords?: string[]
  description?: string
}

const { title, keywords, description } = Astro.props
---

<BaseLayout {...{ title, keywords, description }}>
  <article
    class="prose prose-base prose-cyan dark:prose-sky dark:prose-invert prose-p:text-pretty mx-auto"
  >
    <slot />
  </article>
</BaseLayout>
