---
import '@fontsource/geist-mono'
import BaseLayout from './BaseLayout.astro'
import './MarkdownLayout.css'

interface Props {
  title: string
  keywords?: string[]
  description?: string
}

const { title, keywords, description } = Astro.props
---

<BaseLayout {...{ title, keywords, description }}>
  <article
    class="prose prose-sm prose-cyan mx-auto dark:prose-sky dark:prose-invert xs:prose-base prose-p:text-pretty"
  >
    <slot />
  </article>
</BaseLayout>
