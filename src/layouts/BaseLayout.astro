---
import NavBar from '~/components/NavBar.astro'
import Footer from '~/components/Footer.astro'

import '../styles/main.css'

interface Props {
  title?: string
}

const { title = 'Fwio' } = Astro.props
---

<html lang="en-US">
  <head>
    <script>
      const prevTheme = localStorage.getItem('theme')

      if (
        prevTheme === 'dark' ||
        (!prevTheme &&
          window.matchMedia('(prefers-color-scheme: dark)').matches)
      ) {
        document.documentElement.classList.add('dark')
      } else {
        document.documentElement.classList.remove('dark')
      }
    </script>
    <title>{title}</title>
    <meta name="robots" content="index, follow" />
    <meta name="description" content="UN JOUR JE SERAI DE RETOUR PRÃˆS DE TOI" />
    <meta charset="UTF-8" />
    <meta name="theme-color" content="#ffffff" />
    <meta name="author" content="Fwio" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="keywords"
      content="fwio,blog,ts,typescript,vue,react"
      data-rh="true"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/fwio.svg" />
    <link rel="apple-touch-icon" href="/fwio-apple-touch.png" sizes="180x180" />
    <link rel="mask-icon" href="/fwio.svg" color="#FFFFFF" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/lxgw-wenkai-webfont@1.1.0/style.css"
    />
    <slot name="head" />
  </head>
  <body>
    <div class="text-gray-700 dark:text-gray-200 scroll-smooth">
      <NavBar />
      <main class="px7 py10">
        <slot />
        <Footer />
      </main>
      <img
        aria-hidden="true"
        src="/seagull.svg"
        alt="seagull"
        class="fixed top-1/2 left-1/2 -translate-1/2 max-w-2/5 md:max-w-1/6 ha aspect-1 op45 dark:op100 filter-invert-60 mix-blend-difference pointer-events-none"
      />
    </div>
  </body>
</html>
